package com.promineotech;

public class BooleanProblems {

	public static void main(String[] args) {
		
		// If/else problem with char variable
		// Create an if/else conditional block that evaluates whether
		// the letter is a vowel (a, e, i, o, u) or a consonant 
		
		char letter = 'a';
		
		if(letter == 'a' || letter == 'e' || letter == 'i' || letter == 'o' || letter == 'u') {
			System.out.println("The letter is a vowel.");
		} else {
			System.out.println("The letter is a consonant.");
		}

	}

}
